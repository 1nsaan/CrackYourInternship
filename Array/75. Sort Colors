class Solution {
    public void sortColors(int[] nums) {
        int red=0,blue=nums.length-1;
        for(int white=0;white<=blue;){
            if(nums[white]==0){
                nums[white]=nums[red];
                nums[red]=0;
                red++;
                white++;
            }else if(nums[white]==2){
                nums[white]=nums[blue];
                nums[blue]=2;
                blue--;
            }
            else white++;
        }
    }
}
